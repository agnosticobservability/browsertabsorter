{
  "manifest_version": 3,
  "name": "Browser Tab Sorter",
  "version": "1.0.0",
  "description": "Automatically group and sort tabs with adjustable strategies and a rich UI.",
  "permissions": ["tabs", "tabGroups", "storage"],
  "optional_permissions": ["history"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Tab Sorter",
    "default_popup": "ui/popup.html"
  },
  "options_page": "ui/options.html",
  "background": {
    "service_worker": "dist/background/serviceWorker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
